datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  clerkId     String   @unique
  email       String   @unique
  phoneNo     String   @unique
  firstName   String
  lastName    String
  profileImg  String
  dob         DateTime?
  gender      String?
  country     String? 
  address     Json?   // Grouped address fields
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
